rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * CURACARE AI SECURITY RULES - PROTOTYPING VERSION
     *
     * Core Philosophy:
     * This ruleset enforces a strict user-ownership model for patient data while providing 
     * public visibility for medicine inventory. Administrative access is governed by 
     * a high-performance existence check on a dedicated admin roles collection.
     *
     * Data Structure:
     * - /users/{userId}: Private user profile data.
     * - /medicines/{medicineId}: Publicly readable inventory.
     * - /users/{patientId}/orders/{orderId}: Private patient orders.
     * - /users/{patientId}/orderHistory/{historyId}: Private historical purchase records.
     * - /roles_admin/{uid}: Role-based access control tokens.
     */

    // --- GLOBAL HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the current user is the owner of the document based on the path ID.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Checks if the current user has an entry in the admin roles collection.
     */
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    /**
     * Combines ownership check with document existence for updates and deletes.
     */
    function isExistingOwner(userId) {
      return resource != null && isOwner(userId);
    }

    // --- COLLECTION RULES ---

    /**
     * @description Rules for user profile documents.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']));
    }

    /**
     * @description Rules for the global medicine inventory. Publicly readable, admin writable.
     * @path /medicines/{medicineId}
     */
    match /medicines/{medicineId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /**
     * @description Rules for patient orders. Accessible by the patient or administrators.
     * @path /users/{patientId}/orders/{orderId}
     */
    match /users/{patientId}/orders/{orderId} {
      allow get, list: if isOwner(patientId) || isAdmin();
      allow create: if isOwner(patientId) && request.resource.data.patientId == patientId;
      allow update: if (isExistingOwner(patientId) || isAdmin()) && request.resource.data.patientId == resource.data.patientId;
      allow delete: if isExistingOwner(patientId) || isAdmin();
    }

    /**
     * @description Rules for patient order history. Accessible by the patient or administrators.
     * @path /users/{patientId}/orderHistory/{historyId}
     */
    match /users/{patientId}/orderHistory/{historyId} {
      allow get, list: if isOwner(patientId) || isAdmin();
      allow create: if isOwner(patientId) && request.resource.data.patientId == patientId;
      allow update: if (isExistingOwner(patientId) || isAdmin()) && request.resource.data.patientId == resource.data.patientId;
      allow delete: if isExistingOwner(patientId) || isAdmin();
    }

    /**
     * @description Internal administrative roles collection.
     * @path /roles_admin/{uid}
     */
    match /roles_admin/{uid} {
      allow get: if isSignedIn();
      allow list: if false;
      allow create, update, delete: if false;
    }
  }
}